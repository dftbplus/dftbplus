'''Command line wrapper for dp_bands'''

import sys
from dptools.scripts.common import ScriptError
import dptools.scripts.dp_bands as dp_bands

try:
    dp_bands.main()
except ScriptError as exc:
    sys.stderr.write('ScriptError: ' + str(exc) + '\n')
    sys.exit(1)
