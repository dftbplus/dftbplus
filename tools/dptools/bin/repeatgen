'''Command line wrapper for repeatgen'''

import sys
from dptools.scripts.common import ScriptError
import dptools.scripts.repeatgen as repeatgen

try:
    repeatgen.main()
except ScriptError as exc:
    sys.stderr.write('ScriptError: ' + str(exc) + '\n')
    sys.exit(1)
