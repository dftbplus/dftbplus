Geometry = GenFormat {
  <<< "geo.gen"
}

Hamiltonian = DFTB {
  SCC = Yes
  MaxAngularMomentum {
    O = "p"
    H = "s"
  }
  SlaterKosterFiles = Type2FileNames {
    Prefix = "slakos/origin/mio-1-1/"
    Separator = "-"
    Suffix = ".skf"
  }
  KPointsAndWeights {
    0.0  0.0  0.0  1.0
  }
  DipoleCorrection {
    DipoleLayerPos [AA] = 18.5
  }
}

Analysis {
  CalculateForces = Yes
}

Options {
  WriteAutotestTag = Yes
}

Parallel {
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
}
