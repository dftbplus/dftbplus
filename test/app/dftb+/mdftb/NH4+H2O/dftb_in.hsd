Hamiltonian = DFTB {
  Charge = +1
  SCC = Yes
  SCCTolerance = 1.0E-9
  MaxSCCIterations = 300
  Filling = Fermi {
    Temperature = 0.0
  }
  Mixer = Broyden {}
  MaxAngularMomentum = {
    H = "s"
    N = "p"
    O = "p"
  }

  ThirdOrderFull = Yes
  HubbardDerivs = {
    H = -0.1857
    N = -0.1535
    O = -0.1575
  }

  Mdftb = OneCenterApproximation {
    AtomDIntegralScalings = {
      H = 0.0
      N = 0.6
      O = 0.2
    }
    AtomQIntegralScalings = {
      H = 0.0
      N = 3.4
      O = 3.0
    }
    OneCenterAtomIntegrals = {
      H:S|XX|S   = 0.55976
      N:S|X|Px   = 0.68857
      N:S|XX|S   = 0.57638
      N:Px|XX|Px = 1.05308
      N:Py|XX|Py = 0.35103
      O:S|X|Px   = 0.60894
      O:S|XX|S   = 0.45215
      O:Px|XX|Px = 0.83893
      O:Py|XX|Py = 0.27964
    }
  }

  SlaterKosterFiles = Type2Filenames {
    Prefix = {slakos/origin/m3ob-test/}
    Suffix = ".skf"
    Separator = "-"
  }
}

ParserOptions = {
  ParserVersion = 14
  IgnoreUnprocessedNodes = No
}

Analysis = {
  PrintForces = Yes
}

Options = {
  WriteAutotestTag = Yes
  WriteResultsTag = Yes
}

Parallel{
  Blacs{BlockSize=2}
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
}
