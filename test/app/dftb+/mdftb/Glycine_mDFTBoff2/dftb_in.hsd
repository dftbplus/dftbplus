Hamiltonian = DFTB {
  Charge = 0
  SCC = Yes
  SCCTolerance = 1.0E-9
  MaxSCCIterations = 300
  Filling = Fermi {
    Temperature = 0.0
  }
  Mixer = Broyden {}
  MaxAngularMomentum = {
    H = "s"
    C = "p"
    N = "p"
    O = "p"
  }

  ThirdOrderFull = Yes
  HubbardDerivs = {
    H = -0.1857
    C = -0.1492
    N = -0.1535
    O = -0.1575
  }

  Mdftb = OneCenterApproximation {
    # Disable all atomic dipole and quadrupole moments
    # to ensure that mDFTB does not interfere with other parts of the code.
    # The results should be identical to those of DFTB2.
    AtomDIntegralScalings = {
      H = 0.0
      C = 0.8
      N = 0.6
      O = 0.2
    }
    AtomQIntegralScalings = {
      H = 0.0
      C = 2.6
      N = 3.4
      O = 3.0
    }
    OneCenterAtomIntegrals = {
      H:S|XX|S   = 0.0
      C:S|X|Px   = 0.0
      C:S|XX|S   = 0.0
      C:Px|XX|Px = 0.0
      C:Py|XX|Py = 0.0
      N:S|X|Px   = 0.0
      N:S|XX|S   = 0.0
      N:Px|XX|Px = 0.0
      N:Py|XX|Py = 0.0
      O:S|X|Px   = 0.0
      O:S|XX|S   = 0.0
      O:Px|XX|Px = 0.0
      O:Py|XX|Py = 0.0
    }
  }

  SlaterKosterFiles = Type2Filenames {
    Prefix = {slakos/origin/m3ob-test/}
    Suffix = ".skf"
    Separator = "-"
  }
}

ParserOptions = {
  ParserVersion = 14
  IgnoreUnprocessedNodes = No
}

Analysis = {
  PrintForces = Yes
}

Options = {
  WriteAutotestTag = Yes
  WriteResultsTag = Yes
}

Parallel{
  Blacs{BlockSize=2}
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
}
