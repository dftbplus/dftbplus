Geometry = GenFormat {
    <<< 3518_40methanolchloromethane.gen
}

Hamiltonian = DFTB {
    SCC = Yes
    Filling = Fermi {
       Temperature [K] = 300
    }
    MaxAngularMomentum {
       H = "s"
       C = "p"
       O = "p"
       Cl = "d"
    }
    SlaterKosterFiles = Type2FileNames {
       Prefix = "slakos/origin/3ob-3-1/"
       Separator = "-"
       Suffix  = ".skf"
    }
    Dispersion = DftD3 {
        Damping = BeckeJohnson {
            a1 = 0.746
            a2 = 4.191
        }
        s8 = 3.209
        s6 = 1.0
    }
    ThirdOrderFull = Yes
    HubbardDerivs {
       H = -0.1857
       C = -0.1492
       O = -0.1575
       Cl = -0.0697
    }
    HCorrection = Damping {
        Exponent = 4.0
    }
    HalogenXCorr = Yes
    KPointsAndWeights = {0 0 0 1.0}
}

Options = {
    WriteAutotestTag = Yes
}

Analysis = {
    PrintForces = Yes
}

ParserOptions = {
    ParserVersion = 14
}

Parallel {
    # Allow OMP threads explicitely to test for hybrid parallelisation with
    # MPI-binary. (Check the manual before using this in production runs!)
    UseOmpThreads = Yes
}
