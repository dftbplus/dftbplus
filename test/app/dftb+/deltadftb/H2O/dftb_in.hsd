Geometry = GenFormat {
 3  C
 O H
    1  1   -0.2856010474E-26   -0.1366027290E-11    0.7140929218E-01
    2  2    0.3185350269E-15    0.8092442843E+00   -0.4548146461E+00
    3  2   -0.3185350269E-15   -0.8092442843E+00   -0.4548146461E+00
}

Driver = ConjugateGradient {
  MaxSteps = 2
}

Hamiltonian = DFTB {
    SCC = Yes
    SCCTolerance = 1.0E-8
    MaxSCCIterations = 500
    MaxAngularMomentum = {
        O = "p"
        H = "s"
    }
    Mixer = DIIS {}
    NonAufbau = {
        GroundGuess = Yes
    }
    RangeSeparated = LC {
        Screening = MatrixBased {}
    }
    SpinConstants = {
        O = {
            -0.04782
            -0.03335
            -0.03335
            -0.03307
        }
        H = {
            -0.07925
        }
        ShellResolvedSpin = Yes
    }
    Filling = Fermi {
        Temperature [Kelvin] = 100
    }
    OnSiteCorrection= {
        # ss' sp
        # ps  pp'
        Ouu = { 0.00000  0.07858
                0.07858 -0.00665 }
        Oud = { 0.00000  0.16395
                0.16395  0.05179 }
        Olc = { 0.00000  0.15181
                0.15181 -0.01071 }
        Huu = { 0.00000 }
        Hud = { 0.00000 }
        Hlc = { 0.00000 }
    }
    SlaterKosterFiles = Type2FileNames {
Prefix = {slakos/origin/ob2-1-1/shift/}
        Separator = "-"
        Suffix = ".skf"
    }
}

Options = {
    WriteAutotestTag = Yes
}

Analysis = {
    CalculateForces = Yes
}

ParserOptions = {
    ParserVersion = 8
}

Parallel {
    # Allow OMP threads explicitely to test for hybrid parallelisation with
    # MPI-binary. (Check the manual before using this in production runs!)
    UseOmpThreads = Yes
}
