Geometry = GenFormat {
    <<< "geo.gen"
}

Driver = SteepestDescent{MaxSteps=0}  # as we want a fast test
Hamiltonian = DFTB {
    SCC = Yes
    SCCTolerance = 1e-10
    MaxAngularMomentum = {
        O = "p"
        C = "p"
        H = "s"
    }
    SlaterKosterFiles = Type2FileNames {
        Prefix = "slakos/origin/mio-1-1/"
        Separator = "-"
        Suffix = ".skf"
    }
}
ExcitedState {
    Casida {
        NrOfExcitations = 10
        Symmetry = Singlet
        Diagonaliser = Arpack{}
        StateCouplings = {0 1}
	OptimiserCI = Bearpark{
	  EnergyShift [eV] = 0.01
	}
    }
}


Options {
    WriteAutotestTag = Yes
}

ParserOptions {
    ParserVersion = 13
}            

