Geometry = GenFormat {
<<< "coords.gen"
}
Driver = {}
Hamiltonian = DFTB {
  SCC = Yes
  SCCTolerance = 1.0e-7 
  MaxSCCIterations = 1000
  Mixer = Simple {
    MixingParameter = 5.0E-002
  }
  MaxAngularMomentum = {
    B = "p"
    N = "p"
  }
  Filling = Fermi {
    Temperature [Kelvin] = 300.0
  }
  SlaterKosterFiles = Type2FileNames {
    Prefix = "./"
    Separator = "-"
    Suffix = ".skf"
  }
  ReduceKPointsByInversion = No
  KPointsAndWeights = SupercellFolding {
   15 0 0
   0 15 0
   0 0 1
   0.0 0.0 0.5
 }
}

Options = {
WriteAutotestTag = Yes
}


InputVersion = 23.1

ElectronDynamics = {
  UseVectorPotential = Yes
  Steps = 500
  TimeStep = 0.2
  Perturbation = Laser {
    PolarizationDirection = 1.0 0.0 0.0
    LaserEnergy [ev] = 4.4
  }
  FieldStrength [v/a] = 0.1
}

Parallel {
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
}
