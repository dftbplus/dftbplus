Geometry = GenFormat {
    <<< H2O.gen
}

Hamiltonian = DFTB {
    SCC = Yes
    SCCTolerance = 1.0E-10
    MaxAngularMomentum = {
        O = "p"
        H = "s"
    }
    Filling = Fermi {
        Temperature [Kelvin] = 1
    }
    OnSiteCorrection= {
        # ss' sp
        # ps  pp'
        Ouu = { 0.00000  0.07858
                0.07858 -0.00665 }
        Oud = { 0.00000  0.16395
                0.16395  0.05179 }
        Olc = { 0.00000  0.15181
                0.15181 -0.01071 }
        Huu = { 0.00000 }
        Hud = { 0.00000 }
        Hlc = { 0.00000 }
    }
    RangeSeparated = LC{
        Screening = MatrixBased{}
    }
    SlaterKosterFiles = Type2FileNames {
Prefix = {slakos/origin/ob2-1-1/shift/}
        Separator = "-"
        Suffix = ".skf"
    }
}

Options = {
    WriteAutotestTag = Yes
}

Analysis = {
    CalculateForces = Yes
}

ParserOptions = {
    ParserVersion = 6
}

Parallel {
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
}

