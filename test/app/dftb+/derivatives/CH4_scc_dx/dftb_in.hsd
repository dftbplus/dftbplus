Geometry = GenFormat {
    5  C
    C H
    1  1    0.0000000000E+00   -0.4573178652E-16    0.9146357305E-16
    2  2    0.6287142402E+00    0.6287142402E+00    0.6287142402E+00
    3  2   -0.6287142402E+00   -0.6287142402E+00    0.6287142402E+00
    4  2   -0.6287142402E+00    0.6287142402E+00   -0.6287142402E+00
    5  2    0.6287142402E+00   -0.6287142402E+00   -0.6287142402E+00
}

Hamiltonian = DFTB {
    SCC = Yes
    SCCTolerance = 1.0E-10
    MaxAngularMomentum = {
        C = "p"
        H = "s"
    }
    Filling = Fermi {
        Temperature [Kelvin] = 0.0
    }
    SlaterKosterFiles = Type2FileNames {
        Prefix = {slakos/origin/mio-1-1/}
        Separator = "-"
        Suffix = ".skf"
    }
}

Analysis = {
    CoordDerivatives = Yes
    PerturbSccTol = 1.0E-8
}

Options = {
    WriteAutotestTag = Yes
}

ParserOptions = {
    ParserVersion = 14
}

Parallel {
    # Allow OMP threads explicitely to test for hybrid parallelisation with
    # MPI-binary. (Check the manual before using this in production runs!)
    UseOmpThreads = Yes
}
