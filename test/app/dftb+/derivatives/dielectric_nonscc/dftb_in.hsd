Geometry = GenFormat {
    2  F
    Si
    1    1    0.00 0.00 0.00
    2    1    0.25 0.25 0.25
    0.00000000000E+00   0.00000000000E+00   0.00000000000E+00
    0.27135460000E+01   0.27135460000E+01   0.00000000000E+00
    0.00000000000E+00   0.27135460000E+01   0.27135460000E+01
    0.27135460000E+01   0.00000000000E+00   0.27135460000E+01
}

Hamiltonian = DFTB {
    SCC = No
    MaxAngularMomentum {
        Si = "d"
    }
    Filling = Fermi {
        Temperature [Kelvin] = 0.0
    }
    SlaterKosterFiles {
        Prefix {slakos/origin/pbc-0-3/}
        Si-Si = "Si-Si.skf"
    }
    KPointsAndWeights = SupercellFolding {
        10 0 0
        0 10 0
        0 0 10
        0.5 0.5 0.5
    }
}

Options {
    WriteAutotestTag = Yes
}

Analysis {
    DielectricFunction {
        Sigma [eV] = 0.1
    }
    PrintForces = Yes
    MullikenAnalysis = Yes
    AtomResolvedEnergies = Yes
}

ParserOptions = {
    ParserVersion = 14
}

Parallel {
    # Allow OMP threads explicitely to test for hybrid parallelisation with
    # MPI-binary. (Check the manual before using this in production runs!)
    UseOmpThreads = Yes
}
