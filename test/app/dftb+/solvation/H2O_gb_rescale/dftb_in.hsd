Geometry = GenFormat {
    3  C
    O H
    1  1    0.0000000000E+00    0.0000000000E+00    0.0000000000E+00
    2  2    0.0000000000E+00    0.8008913311E+00    0.5450170508E+00
    3  2    0.0000000000E+00   -0.8008913311E+00    0.5450170508E+00
}

Hamiltonian = DFTB {
    SCC = Yes
    SCCTolerance = 1.0E-10
    MaxAngularMomentum = {
        O = "p"
        H = "s"
    }
    Filling = Fermi {
        Temperature [Kelvin] = 298.15
    }
    OnSiteCorrection= {
        # ss' sp
        # ps  pp'
        Ouu = {0        0.08672
               0.08672 -0.00523}
        Oud = {0        0.14969
               0.14969  0.03834}
        Huu = {0}
        Hud = {0}
    }
    Solvation = GeneralizedBorn { # GFN2-xTB/GBSA(water)
        Solvent = fromConstants {
            Epsilon =   80.20000000
            MolecularMass [amu] = 18.00000000
            Density [kg/l] = 1.00000000
        }
        Temperature [K] = 298.15
        FreeEnergyShift [kcal/mol] = 1.16556316
        BornScale = 1.55243817
        BornOffset = 2.462811043694508E-02
        Radii = vanDerWaalsRadiiD3 {}
        Descreening = Values {
            H  = 0.71893869
            O  = 0.75369019
        }
        RescaleSolvatedFields = Yes
    }
    ElectricField = {
      External = {
        Direction = 0.0 0.0 1.0
        Strength [v/m] = 1E9
      }
    }
    SlaterKosterFiles = Type2FileNames {
        Prefix = {slakos/origin/mio-1-1/}
        Separator = "-"
        Suffix = ".skf"
    }
}

Options = {
    WriteAutotestTag = Yes
}

Analysis = {
    CalculateForces = Yes
}

ParserOptions = {
    ParserVersion = 11
}

Parallel {
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
}
