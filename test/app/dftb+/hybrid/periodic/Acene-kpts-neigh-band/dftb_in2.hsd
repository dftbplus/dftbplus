Geometry = GenFormat {
  <<< Acene_Primitive_Cell.gen
}

Hamiltonian = DFTB {

  SCC = Yes
  ConvergentSCCOnly = No
  ReadInitialCharges = Yes
  MaxSccIterations = 1

  Filling = Fermi {
    Temperature [K] = 0.0
  }

  MaxAngularMomentum = {
    C = "p"
    H = "s"
  }

  SlaterKosterFiles = Type2FileNames {
    Prefix = "slakos/origin/ob2-1-1/shift/"
    Separator = "-"
    Suffix = ".skf"
  }

  Hybrid = LC {
    CoulombMatrix = Truncated {}
    Screening = NeighbourBased {
      Threshold = 1e-100
    }
  }

  KPointsAndWeights = Klines {
      1 0.0 0.0 -0.5
     20 0.0 0.0 +0.5
  }

}

Analysis {
  PrintForces = No
}

Options {
  WriteAutotestTag = Yes
}

ParserOptions {
  ParserVersion = 14
}

Parallel {
  UseOmpThreads = Yes
  Groups = 1
}
