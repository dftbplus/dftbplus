Geometry = GenFormat {
    <<< C240.gen
}

Hamiltonian = DFTB {
    SCC = Yes
    SCCTolerance = 1.0E-8
    MaxAngularMomentum = {
        C = "p"
    }

    SlaterKosterFiles = Type2FileNames {
      Prefix = "slakos/origin/ob2-1-1/shift/"
      Separator = "-"
      Suffix = ".skf"
    }

    Filling = Fermi {
      Temperature [K] = 300
    }

    RangeSeparated = LC {
      Screening = Thresholded {
        CutoffReduction [AA] = 3
        Threshold = 5E-4
      }
    }
}

Options = {
    WriteAutotestTag = Yes
    TimingVerbosity = -1
}

Analysis {
    CalculateForces = No
}

ParserOptions = {
    ParserVersion = 6
}
