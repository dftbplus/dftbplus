Geometry = GenFormat {
  <<< geo.gen
}

Hamiltonian = DFTB {

  MaxSccIterations = 1
  ReadInitialCharges = Yes
  SccTolerance = 1e-10

  MaxAngularMomentum = {
    H = "s"
    C = "p"
    N = "p"
    O = "p"
  }

  SlaterKosterFiles = Type2FileNames {
    Prefix = "slakos/origin/ob2-1-1/shift/"
    Separator = "-"
    Suffix = ".skf"
  }

  SpinPolarisation = Colinear {
    UnpairedElectrons = 2
  }

  SpinConstants = {
    O = {
      -0.04782
      -0.03335
      -0.03335
      -0.03307
    }
    N = {
      -0.04687
      -0.03170
      -0.03165
      -0.03072
    }
    C = {
      -0.04559
      -0.02930
      -0.02930
      -0.02755
    }
    H = {
      -0.07925
    }
    ShellResolvedSpin = Yes
  }

  Hybrid = LC {
    Screening = MatrixBased {}
  }

}

Options {
  WriteAutotestTag = Yes
}

Analysis {
  PrintForces = Yes
}

ParserOptions {
  ParserVersion = 14
}
