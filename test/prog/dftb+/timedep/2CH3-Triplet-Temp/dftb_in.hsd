Geometry = GenFormat {
    <<< "2ch3.gen"
}

Driver = {}

Hamiltonian = DFTB {
    SCC = Yes
    SCCTolerance = 1e-10  # Very tight for test purposes only
    MaxAngularMomentum = {
        C = "p"
        H = "s"
    }
    Filling = Fermi {
        Temperature [Kelvin] = 1000.0
    }
    SlaterKosterFiles = Type2FileNames {
        Prefix = "./"
        Separator = "-"
        Suffix = ".skf"
    }
    SpinConstants = {
        C = {-0.023} # HOMO Wpp
        H = {-0.072} # HOMO Wss
    }
}

Options {
    WriteAutotestTag = Yes
}

ExcitedState {
    Casida {
        NrOfExcitations = 10
        StateOfInterest = 0
        Symmetry = Triplet
    }
}

ParserOptions {
    ParserVersion = 5
}

Parallel {
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
}

