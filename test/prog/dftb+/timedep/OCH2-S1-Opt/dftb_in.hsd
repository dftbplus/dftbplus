Geometry = GenFormat {
    <<< "och2.gen"
}

Driver = ConjugateGradient{
    MaxForceComponent = 1.e-8
}

Hamiltonian = DFTB {
    SCC = Yes
    SCCTolerance = 1e-10
    MaxAngularMomentum = {
        O = "p"
        C = "p"
        H = "s"
    }
    SlaterKosterFiles = Type2FileNames {
        Prefix = "./"
        Separator = "-"
        Suffix = ".skf"
    }
}

Options {
    WriteAutotestTag = Yes
}

ExcitedState {
    Casida {
        NrOfExcitations = 15
        StateOfInterest =  1
        Symmetry = Singlet
        WriteMulliken = Yes
    }
}

ParserOptions {
    ParserVersion = 5
}

Parallel {
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
}

