Geometry = GenFormat {
<<< "geo_start.gen"
}

Driver {}

Hamiltonian = DFTB {
  Scc = Yes
  SccTolerance = 1e-8
  MaxSccIterations = 100
  Mixer = Broyden {
    MixingParameter = 0.2
  }
  MaxAngularMomentum {
    C = "p"
    O = "p"
  }
  KPointsandWeights = SupercellFolding{
    1 0 0
    0 1 0
    0 0 1
    0. 0. 0.
  }
  Charge = 0.0
  SpinPolarisation {}
  Eigensolver = DivideAndConquer {}
  Filling = Fermi {
    Temperature [Kelvin] = 0.0
  }
  SlaterKosterFiles = Type2FileNames {
    Separator = "-"
    Suffix = ".skf"
  }

  Dispersion = Mbd {
    NOmegaGrid = 15
    Beta = 0.86
    KGrid = 1 1 1
  }
}

Analysis {
  CalculateForces = Yes
}

Options {
  WriteAutotestTag = Yes
}

ParserOptions {
  ParserVersion = 5
}

Parallel {
  UseOmpThreads = Yes
}
