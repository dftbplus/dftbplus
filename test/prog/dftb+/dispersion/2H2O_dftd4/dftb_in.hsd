Geometry = GenFormat {
6 C
 O H
   1   2     -.499735     -.006429      .000000
   2   1    -1.467047     -.147444      .000000
   3   1     1.392547      .133948      .000000
   4   2    -1.876914      .729873      .000000
   5   2     1.737135     -.325150     -.779513
   6   2     1.737135     -.325150      .779513
}

Driver {}

Hamiltonian = DFTB {
  SCC = Yes
  SCCTolerance = 1e-5
  MaxSCCIterations = 100
  Mixer = Broyden {
    MixingParameter = 0.2
  }
  MaxAngularMomentum {
    O = "p"
    H = "s"
  }
  Charge = 0.0
  SpinPolarisation {}
  Eigensolver = DivideAndConquer {}
  Filling = Fermi {
    Temperature [Kelvin] = 0.0
  }
  SlaterKosterFiles = Type2FileNames {
    Separator = "-"
    Suffix = ".skf"
  }
  # Warning, the DftD4 parameters below are fake ones for test purposes only!
  Dispersion = DftD4 {
    s6 = 1.0
    a1 = 0.52
    a2 = 3.6
    s9 = 1.0
    s8 = 0.61
    CutoffInter = 60
    CoordinationNumber = Cov {
       Cutoff = 34
    }
    ChargeModel = EEQ {
       CoordinationNumber = Erf {
          Cutoff = 34
       }
    }
  }
}

Options {
  WriteAutotestTag = Yes
}

Analysis {
  CalculateForces = Yes
}

ParserOptions {
  ParserVersion = 5
}

Parallel {
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
}

