Geometry = xyzFormat {
 <<< "struc.xyz"
}

Driver {}

Hamiltonian = DFTB {
  Solvation = GeneralizedBorn { # GFN2-xTB/GBSA(CS2)
    solvent = fromConstants {
      epsilon = 2.64  # Dielectric constant of the solvent
      molecularMass = 76.14  # mass of the solvent molecule
      density = 1.26  # mol density of the solvent
    }
    temperature = 298.15
    state = "gsolv"
    shift [kcal/mol] = 2.81072250
    radii = vanDerWaalsRadiiD3 {}
    descreening = values {
       H = 0.93699367
       C = 0.83307834
       N = 1.02661619
       O = 0.96508008
    }
    CM5 = no
    bornScale = 1.40636177
    bornOffset = 1.653719965215E-03
    OBC = {1.00 0.80 4.85}
    cutoff = 30
  }
  SCC = Yes
  SccTolerance = 1e-10
  MaxAngularMomentum {
    H = "s"
    O = "p"
    C = "p"
    N = "p"
  }
  SlaterKosterFiles = Type2FileNames {
    Separator = "-"
    Suffix = ".skf"
  }
}

Options {
  WriteAutotestTag = Yes
}

Analysis {
  CalculateForces = Yes
}

ParserOptions {
  ParserVersion = 8
}

Parallel {
  UseOmpThreads = Yes
}
