Geometry = xyzFormat {
 <<< "struc.xyz"
}

Driver {}

Hamiltonian = DFTB {
  Solvation = Cosmo {
    Solvent = fromConstants {
      Epsilon = Inf
      MolecularMass [amu] = 1.0
      Density [kg/l] = 1.0
    }
    FreeEnergyShift [kcal/mol] = 0.0
    RadiiScaling = 1.4
    AngularGrid = 302
    Solver = DomainDecomposition {
      MaxMoment = 6
      Accuracy = 1e-10
    }
  }
  SCC = Yes
  Charge = +1
  SccTolerance = 1e-10
  MaxAngularMomentum {
    H = "s"
    C = "p"
    N = "p"
  }
  SlaterKosterFiles = Type2FileNames {
    Separator = "-"
    Suffix = ".skf"
  }
}

Options { WriteAutotestTag = Yes }
Analysis { CalculateForces = Yes }
ParserOptions { ParserVersion = 9 }
Parallel { UseOmpThreads = Yes }
