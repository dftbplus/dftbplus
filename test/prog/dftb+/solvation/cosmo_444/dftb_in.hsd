Geometry = genFormat {
 <<< "struc.gen"
}

Driver {}

Hamiltonian = DFTB {
  Solvation = Cosmo {
    Solvent = fromConstants { # Toluene
      Epsilon = 7.0
      MolecularMass [amu] = 92.14
      Density [kg/l] = 0.867
    }
    State = "mol1bar"
    RadiiScaling = 1.35
    AngularGrid = 146
    Solver = DomainDecomposition {
      MaxMoment = 7
      Accuracy = 1e-10
    }
    SASA { # GFN1-xTB/GBSA(Toluene)
      ProbeRadius [AA] = 1.59772343
      Smoothing [AA] = 0.3
      Offset [AA] = 2
      AngularGrid = 230
      Radii = vanDerWaalsRadiiD3 {}
      SurfaceTension = Values {
        H = -1.52312760
        C = -2.92375089
        O =  0.79482640
        N = -0.80591624
      }
    }
  }
  SCC = Yes
  SccTolerance = 1e-8
  MaxAngularMomentum {
    H = "s"
    O = "p"
    N = "p"
    C = "p"
  }
  SlaterKosterFiles = Type2FileNames {
    Separator = "-"
    Suffix = ".skf"
  }
  HubbardDerivs {
     H = -0.1857
     C = -0.1492
     N = -0.1575
     O = -0.1575
  }
  ThirdOrderFull = Yes
  HCorrection = Damping { Exponent = 4.0 }
}

Options {
  WriteAutotestTag = Yes
}

Analysis {
  CalculateForces = Yes
}

ParserOptions {
  ParserVersion = 8
}

Parallel {
  UseOmpThreads = Yes
}

