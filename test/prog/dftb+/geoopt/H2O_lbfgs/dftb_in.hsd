Geometry = GenFormat {
3  C
 O H
     1    1    0.00000000000E+00  -0.10000000000E+01   0.00000000000E+00
     2    2    0.00000000000E+00   0.00000000000E+00   0.78306400000E+00
     3    2    0.00000000000E+00   0.00000000000E+00  -0.78306400000E+00
}

Driver = Lbfgs {
  MovedAtoms = 1:3
  MaxForceComponent = 1.000000000000000E-008  # Extremely small!
  MaxSteps = 100
  OutputPrefix = "geom.out"
}

Hamiltonian = DFTB {
  SCC = Yes
  SCCTolerance = 1.0E-010  # Extremely small!
  MaxSCCIterations = 1000
  Mixer = Anderson {
    MixingParameter = 5.000000000000000E-002
    Generations = 8
  }
  MaxAngularMomentum = {
    O = "p"
    H = "s"
  }
  Charge = 0.000000000000000E+000
  SpinPolarisation = {}
  Eigensolver = Standard {}
  Filling = Fermi {
    Temperature [Kelvin] = 1.000000000000000E-008
  }
  SlaterKosterFiles = {
    O-O = "O-O.skf"
    O-H = "O-H.skf"
    H-O = "O-H.skf"
    H-H = "H-H.skf"
  }
  ReadInitialCharges = No
}

Options = {
  WriteAutotestTag = Yes
}

ParserOptions = {
  ParserVersion = 4
}

Parallel {
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
}

