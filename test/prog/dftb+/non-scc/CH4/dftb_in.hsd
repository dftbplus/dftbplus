Geometry = GenFormat {
    5  C
  C  H
    1 1    0.0000000000E+00    0.0000000000E+00    0.0000000000E+00
    2 2    0.6287614522E+00    0.6287614522E+00    0.6287614522E+00
    3 2   -0.6287614522E+00   -0.6287614522E+00    0.6287614522E+00
    4 2   -0.6287614522E+00    0.6287614522E+00   -0.6287614522E+00
    5 2    0.6287614522E+00   -0.6287614522E+00   -0.6287614522E+00
}

Hamiltonian = DFTB {
  SCC = No
  MaxAngularMomentum = {
    C = "p"
    H = "s"
  }
  Charge = 0.0
  Filling = Fermi {
    Temperature [Kelvin] = 100.0
  }
  SlaterKosterFiles = Type2FileNames {
    Separator = "-"
    Suffix = ".skf"
  }
}

Options = {
  MullikenAnalysis = Yes
  CalculateForces = Yes
  WriteAutotestTag = Yes
}

ParserOptions = {
  ParserVersion = 4
}

Analysis = {
  ProjectStates = {
    Region = {
      Atoms = C
      ShellResolved = Yes
      Label = "C"
    }
    Region = {
      Atoms = {2:4 -1}
      Label = "H"
    }  
  }  
}

Parallel {
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
}

