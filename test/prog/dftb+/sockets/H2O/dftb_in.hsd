Geometry = GenFormat {
    <<< ice.gen
}

Driver = Socket {
    Verbosity = 0 # quiet
    Protocol = i-PI {} # i-PI interface
    MaxSteps = 1 # Terminate this instance fairly quickly
}

Hamiltonian = DFTB {
    SCC = Yes
    MaxAngularMomentum {
	O = "p"
	H = "s"
    }
    Charge = 0.0
    Filling = Fermi {
	Temperature [Kelvin] = 1.0
    }
    SlaterKosterFiles = Type2FileNames {
	Separator = "-"
	Suffix = ".skf"
    }
    KPointsAndWeights = SupercellFolding {
	1 0 0
	0 1 0
	0 0 1
	0.5 0.5 0.5
    }
}

Options {
    WriteAutotestTag = Yes
}

ParserOptions {
    ParserVersion = 5
}

Parallel {
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
}

# add details for the communication file to be used, this is set
# externally by prerun.py in the created file.txt
<<+ file.hsd
