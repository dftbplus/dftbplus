Geometry = GenFormat {
    <<< geo.gen
}

Driver = Socket {
    File = "dftb_cluster"
    Verbosity = 3 # loud
    Protocol = i-PI {} # i-PI interface
    MaxSteps = 5 # Terminate this instance only when out of structures
}

Hamiltonian = DFTB {
    SCC = No
    MaxAngularMomentum {
	O = "p"
	H = "s"
    }
    Charge = 0.0
    Filling = Fermi {
	Temperature [Kelvin] = 1.0
    }
    SlaterKosterFiles = Type2FileNames {
	Separator = "-"
	Suffix = ".skf"
    }
}

Options {
    WriteAutotestTag = Yes
}

ParserOptions {
    ParserVersion = 5
}
