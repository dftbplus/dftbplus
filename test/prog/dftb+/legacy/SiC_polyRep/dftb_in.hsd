# This uses the older polynomial repulsive form, and is just included
# for regression purposes.
Geometry = GenFormat {
    2  F
    Si C
    1    1    0.00 0.00 0.00
    2    2    0.25 0.25 0.25
    0.0000000E+00   0.0000000E+00   0.0000000E+00
    0.2170838E+01   0.2170838E+01   0.0000000E+00
    0.0000000E+00   0.2170838E+01   0.2170838E+01
    0.2170838E+01   0.0000000E+00   0.2170838E+01
}

Driver = {}

Hamiltonian = DFTB {
    SCC = No
    PolynomialRepulsive = SetForAll { Yes }
    MaxAngularMomentum = {
        Si = "p"
        C = "p"
    }
    Charge = 0.0
    Filling = Fermi {
        Temperature [Kelvin] = 0.0
    }
    SlaterKosterFiles = {
        Si-Si = "./Si-Si.skf"
        Si-C = "./Si-C.skf"
        C-Si = "./C-Si.skf"
        C-C = "./C-C.skf"
    }
    KPointsAndWeights = {
        0.0  0.0   0.0    1.0
    }
}

Analysis = {
    CalculateForces = Yes
    MullikenAnalysis = Yes
    AtomResolvedEnergies = Yes
}

Options = {
    WriteAutotestTag = Yes
}

ParserOptions = {
    ParserVersion = 5
}

Parallel {
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
}

