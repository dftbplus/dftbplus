Geometry = GenFormat {
    4 C
    C H
    1 1  0  0  0
    3 2  1  1 -1
    4 2 -1  1  1
    5 2  1 -1  1
}

Hamiltonian = DFTB {
    SCC = Yes
    SCCTolerance = 1.0E-12 # abnormally tight tolerance used for accuracy
    MaxAngularMomentum = {
        C = "p"
        H = "s"
    }
    Charge = 0.0
    Filling = Fermi {
        Temperature [Kelvin] = 100
    }
    SlaterKosterFiles = Type2FileNames {
        Separator = "-"
        Suffix = ".skf"
    }
    SpinPolarisation = Colinear {
        UnpairedElectrons = 1.0
    }
    SpinConstants = {
        H = {
            -0.072
        }
        C = {
            -0.023
        }
    }
    ThirdOrderFull = Yes
    HubbardDerivs {
        H = -0.07
        C = -0.04
    }
    OnSiteCorrection= {
        Huu = {0}
        Hud = {0}
        Cuu = {
            0.00000  0.04973
            0.04973 -0.01203
        }
        Cud = {
            0.00000  0.10512
            0.10512  0.02643
        }
    }
}

Options = {
    WriteAutotestTag = Yes
}

Analysis = {
    Polarisability = {
        Static = Yes
    }
}

ParserOptions = {
    ParserVersion = 9
}

Parallel {
    # Allow OMP threads explicitely to test for hybrid parallelisation with
    # MPI-binary. (Check the manual before using this in production runs!)
    UseOmpThreads = Yes
}
