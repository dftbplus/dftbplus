Geometry = GenFormat {
    4 C
    C H
    1 1  0  0  0
    3 2  1  1 -1
    4 2 -1  1  1
    5 2  1 -1  1
}

Hamiltonian = DFTB {
    MaxAngularMomentum = {
        C = "p"
        H = "s"
    }
    Charge = 0.0
    Filling = Fermi {
        Temperature [Kelvin] = 100
    }
    SlaterKosterFiles = Type2FileNames {
        Separator = "-"
        Suffix = ".skf"
    }
}

Options = {
    WriteAutotestTag = Yes
}

Analysis = {
    Polarisability = {
        Static = Yes
    }
}

ParserOptions = {
    ParserVersion = 9
}

Parallel {
    # Allow OMP threads explicitely to test for hybrid parallelisation with
    # MPI-binary. (Check the manual before using this in production runs!)
    UseOmpThreads = Yes
}
