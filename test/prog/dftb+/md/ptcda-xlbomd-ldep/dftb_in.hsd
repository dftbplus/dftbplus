Hamiltonian = DFTB {
  SCC = Yes
  SCCTolerance = 1e-10
  Filling = Fermi {
    Temperature [Kelvin] = 400
  }
  SlaterKosterFiles = Type2FileNames {
   Prefix = "./"
   Separator = "-"
   Suffix = ".skf" 
  }
  MaxAngularMomentum {
    H = "s"
    O = "p"
    C = "p"
  }
  ForceEvaluation = Dynamics
  Eigensolver = DivideAndConquer {}
  ThirdOrderFull = Yes
  DampXH = Yes
  DampXHExponent = 4.0
  # NOTE: some of this Hubbard derivatives are FAKE values!
  HubbardDerivs {
    C = -0.1692 -0.1492
    H = -0.1857
    O = -0.1775 -0.1575
  }
  # NEVER use this SK-set with the setting below (unless for testing)
  OrbitalResolvedSCC = Yes
}

Options {
  RandomSeed = 3871906
  WriteAutotestTag = Yes
}

ParserOptions {
  ParserVersion = 5
}


Parallel {
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
}

