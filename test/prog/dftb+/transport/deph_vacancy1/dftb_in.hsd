Geometry = GenFormat {
<<< 'device_7.gen'
}

Transport {
    Device {
      AtomRange = 1 135
      FirstLayerAtoms =  1 68
    }
    Contact {
      Id = "source"
      AtomRange = 136 271
      FermiLevel [eV] = -4.7103
      potential [eV] = 2.0
      Temperature = 0.00001
    }
    Contact {
      Id = "drain"
      AtomRange = 272 407
      FermiLevel [eV] = -4.7103
      potential [eV] = -2.0
      Temperature = 0.00001
    }
}

Hamiltonian = DFTB {
  SCC = No
  MaxAngularMomentum = {
    C = "p"
    H = "s"
  }
  
  SlaterKosterFiles = Type2FileNames {
    Prefix = ""
    Separator = "-"
    Suffix = ".skf"
  }

  Eigensolver = TransportOnly{}
}

# ************************************
# NOTE: Dephasing is not working yet
# ************************************ 
Dephasing {
  OrthonormalDevice = Yes
  VibronicElastic { 
    AtomBlock = Yes
    Coupling [eV] = Constant { 0.1 }
    MaxSCBAIterations = 100
  }
}

Analysis = {
TunnelingAndDos {
  Verbosity = 101
  delta = 0.000001
  EnergyRange [eV] = -6.5  -6.3
  EnergyStep [eV] = 0.1
  Region = {
    Atoms = 1:135
  }
 }
}

Options = {
  WriteAutotestTag = Yes
}

ParserOptions = {
  ParserVersion = 6
}

Parallel = {
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
}
