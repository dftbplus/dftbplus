Geometry = GenFormat {
  <<< "geo.gen"
}

Transport {
    Device {
      AtomRange = 1 8 
    }
    Contact {
      Id = "source"
      AtomRange = 9 24 
    FermiLevel [eV] = -8.358658 
    }
    Contact {
      Id = "drain"
      AtomRange = 25 40
    FermiLevel [eV] = -8.358658 
    }
}


Hamiltonian = DFTB {
  SCC = Yes
  SCCTolerance = 1e-8
  MaxAngularMomentum {
    Si = s
    H = s
  }
  Filling = Fermi {
    Temperature [Kelvin] = 0
  }
  SlaterKosterFiles = Type2Filenames {
    Separator = "-"
    Suffix = ".skf"
  }
  Electrostatics = Poisson {
    Poissonbox [Angstrom] = 20.0 20.0 1.0
    MinimalGrid [Angstrom] = 0.3 0.3 0.3
    AtomDensityCutoff [Angstrom] = 7.05
    SavePotential = No
    BuildBulkPotential = Yes
    ReadOldBulkPotential = No
    BoundaryRegion = Global {}
    PoissonAccuracy = 1e-7
    MaxParallelNodes = 2 
  }
  Eigensolver = GreensFunction {
    Delta [eV] = 1e-4
    ContourPoints = 40 40
    LowestEnergy [eV] = -60.0
  }
  OldSKInterpolation = Yes
}

Analysis{
  TunnelingAndDos{
    EnergyRange [eV] = -10.0  0.0
    EnergyStep [eV] = 0.02
    Delta [eV] = 1e-4
  }
}

Parallel = {
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
}

Options {
  WriteAutotestTag = Yes
}

ParserOptions {
  ParserVersion = 6
}
