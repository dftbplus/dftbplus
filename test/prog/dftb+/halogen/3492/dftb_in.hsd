Geometry = GenFormat {
    <<< 3492_14bromomethaneformaldehyde.gen
}

Driver = LBFGS {}

Hamiltonian = DFTB {
    SCC = Yes
    Filling = Fermi {
       Temperature [K] = 300
    }
    MaxAngularMomentum {
       H = "s"
       C = "p"
       O = "p"
       Br = "d"
    }
    SlaterKosterFiles = Type2FileNames {
       Prefix = "./"
       Separator = "-"
       Suffix  = ".skf"
    }
    Dispersion = DftD3 {
        Damping = BeckeJohnson {
            a1 = 0.746
            a2 = 4.191
        }
        s6 = 1.000
        s8 = 3.209
    }
    ThirdOrderFull = Yes
    HubbardDerivs {
       H = -0.1857
       C = -0.1492
       O = -0.1575
       Br = -0.0573
    }
    HCorrection = Damping {
        Exponent = 4.0
    }
    HalogenXCorr = Yes
    ShellResolvedSCC = No
}

Options = {
    WriteAutotestTag = Yes
}

Analysis = {
    CalculateForces = Yes
}

ParserOptions = {
    ParserVersion = 7
}

Parallel {
    # Allow OMP threads explicitely to test for hybrid parallelisation with
    # MPI-binary. (Check the manual before using this in production runs!)
    UseOmpThreads = Yes
}
