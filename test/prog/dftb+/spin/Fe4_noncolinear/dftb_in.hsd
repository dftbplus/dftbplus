Geometry = GenFormat {
    4  C
 Fe
    1 1      0.00020789      0.00020770      0.00020773
    2 1      1.66468182      1.66468190      0.00020778
    3 1      1.66468183      0.00020777      1.66468190
    4 1      0.00020785      1.66468187      1.66468187
}

Driver = ConjugateGradient {
  AppendGeometries = Yes
}

Hamiltonian = DFTB {
  SCC = Yes
  OrbitalResolvedSCC = Yes
  SCCTolerance = 1.0e-5
  MaxSCCIterations = 1000
  Mixer = Broyden {}
  MaxAngularMomentum = {
    Fe = "d"
  }
  Charge = 0.0
  SpinPolarisation = NonColinear { # each atom starts with a spin of 3
    InitialSpins = {
      #AllAtomSpins = {
      #  0.40824829046386301636 -0.40824829046386301636 0.81649658092772603273
      #  0.40824829046386301636 -0.40824829046386301636 0.81649658092772603273
      #  0.40824829046386301636 -0.40824829046386301636 0.81649658092772603273
      #  0.40824829046386301636 -0.40824829046386301636 0.81649658092772603273
      #}
      AtomSpin = {
	Atoms = Fe
	SpinPerAtom = {
	  0.40824829046386301636 -0.40824829046386301636 0.81649658092772603273
	}
      }
    }
  }
  SpinConstants = {
    Fe = {
           -0.013 -0.009 -0.003
           -0.009 -0.011 -0.001
           -0.003 -0.001 -0.015
    }
  }
  Eigensolver = Standard {}
  Filling = Fermi {
    Temperature [Kelvin] = 5.0e+2
  }
  SlaterKosterFiles = {
    Fe-Fe = "./Fe-Fe.skf"
  }
}

Options = {
  WriteAutotestTag = Yes
}

ParserOptions = {
  ParserVersion = 4
}

Parallel {
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
}

