Geometry = GenFormat {
    <<< geo.gen
}

Hamiltonian = DFTB {
    SCC = Yes
    ReadInitialCharges = No
    SCCTolerance = 1.0E-3
    MaxAngularMomentum = {
        C = "p"
    }

    SlaterKosterFiles = {
        C-C = "C-C.skf"
    }

    RangeSep = {
        Algorithm = NB {
	  DeltaCutoff [AA] = -4
	}
    }
}

Options = {
    WriteAutotestTag = No
}

Analysis {
#    CalculateForces = Yes
#    AtomResolvedEnergies = Yes
}

ParserOptions = {
    ParserVersion = 6
}
