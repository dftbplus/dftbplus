Geometry = GenFormat {
    <<< geo.gen
}

Hamiltonian = DFTB {
    SCC = Yes
    SCCTolerance = 1.0E-8  # Extremely small
    MaxAngularMomentum = {
        H = "s"
        C = "p"
    }
    SlaterKosterFiles = {
        C-C = "C-C.skf"
        C-H = "C-H.skf"
        H-C = "H-C.skf"
        H-H = "H-H.skf"
    }
    SpinPolarisation = Colinear {
        UnpairedElectrons = 1
    }
    SpinConstants = { 
        C = {
     	      -0.04559
              -0.02930
              -0.02930
              -0.02755
        }
        H = {-0.07925}
        ShellResolvedSpin = Yes
    }
    RangeSeparated = LC {
      Screening = MatrixBased {}
    }
}

Options = {
    WriteAutotestTag = Yes
}

Analysis {
    CalculateForces = No
}

ParserOptions = {
    ParserVersion = 6
}
