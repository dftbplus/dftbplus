Driver = {}
    
Hamiltonian = DFTB {
  SCC = Yes
  SCCTolerance = 1.0E-8
  ReadInitialCharges = Yes
  MaxSCCIterations = 1
  MaxAngularMomentum {
    H = "s"
    O = "p"
  }
  SlaterKosterFiles = Type2FileNames {
    Separator = "-"
    Suffix  = ".skf"
  }
  ThirdOrder = Yes
  HubbardDerivs {
    O = -0.14
    H = -0.07
  }
  DampXH = Yes
  DampXHExponent = 4.95
}

Options = {
  WriteAutotestTag = Yes
  ReadChargesAsText = Yes
}

Analysis = {
  CalculateForces = Yes
}

ParserOptions = {
  ParserVersion = 5
}

Parallel {
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
}

