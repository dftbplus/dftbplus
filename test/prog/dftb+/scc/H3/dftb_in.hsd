Geometry = GenFormat {
3  C
 H
     1    1    0.0   0.0   0.0
     2    1    0.8   0.0   0.0
     3    1    0.2   0.6   0.0
}

Driver = {}

Hamiltonian = DFTB {
  SCC = Yes
  SCCTolerance = 1.0E-8  # Extremely small!
  MaxSCCIterations = 10
  Mixer = DIIS {
    InitMixingParameter = 0.2
    Generations = 3
    UseFromStart = Yes
  }
  MaxAngularMomentum = {
    H = "s"
  }
  Filling = Fermi {
    Temperature [Kelvin] = 20
  }
  SlaterKosterFiles = {
    H-H = "H-H.skf"
  }
}

Options = {
  CalculateForces = Yes
  WriteAutotestTag = Yes
}

ParserOptions = {
  ParserVersion = 3
}

Parallel {
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
}

