 Driver = {}
Hamiltonian = DFTB {
  SCC = Yes
  SCCTolerance = 1.0E-10 # abnormally tight tollerance used for accuracy
  MaxAngularMomentum = {
    C = "p"
    H = "s"
  }
  Charge = 0.0
  Filling = Fermi {
    Temperature [Kelvin] = 273.15
  }
  SlaterKosterFiles = Type2FileNames {
    Separator = "-"
    Suffix = ".skf"
  }
  Differentiation = FiniteDiff {}
}

Options = {
  WriteAutotestTag = Yes
}

InputVersion = 20.1

ElectronDynamics = {
  Steps = 2000
  TimeStep [au] = 0.2
  Perturbation = Laser {
    PolarizationDirection = 0.0 1.0 1.0
    LaserEnergy [eV] = 6.795
  }
  FieldStrength [v/a] = 0.01
  IonDynamics = Yes
  Restart = Yes
  WriteRestart = No
}

Parallel {
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
  # Due to small size of problem, allow 2 MPI processors by shrinking blocks
  Blacs = BlockSize {
    16
  }
}
