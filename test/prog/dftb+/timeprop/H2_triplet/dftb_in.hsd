Geometry = GenFormat {
2  C
 H
    1 1    0.0000000000E+00    0.0000000000E+00   -0.3713623892E+00
    2 1    0.0000000000E+00    0.0000000000E+00    0.3713623892E+00
}
Driver = {}
Hamiltonian = DFTB {
  SCC = Yes
  SCCTolerance = 1.0E-007   # Very small!
  MaxSCCIterations = 1000
  Mixer = Simple {
    MixingParameter = 5.0E-002
  }
  MaxAngularMomentum = {
    H = "s"
  }
  Charge = 0.0
  SpinPolarisation = Colinear {
    UnpairedElectrons = 0.0
  }
  SpinConstants = { 
    H = {
       -6.4E-002
    }
  }
  Filling = Fermi {
    Temperature [Kelvin] = 10.0
  }
  SlaterKosterFiles = {
    H-H = "H-H.skf"
  }
}

Options = {
  WriteAutotestTag = Yes
}

InputVersion = 20.1

ElectronDynamics = {
  Steps = 20000
  TimeStep = 0.2
  Perturbation = Kick {
    PolarizationDirection = "z"
    SpinType = triplet
  }
  FieldStrength [v/a] = 0.001
}

Parallel {
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
}
