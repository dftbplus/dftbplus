Geometry = GenFormat {
    2 C
    N O
    1   1     0.000000  0.000000   0.000000
    2   2     1.151128  0.000000   0.000000
}

Driver = {}

Hamiltonian = DFTB {
    
    SCC = Yes
    SCCTolerance = 1.0E-10
    
    MaxAngularMomentum = {
        N = "p"
        O = "p"
    }
    
    SpinPolarisation = Colinear {
        UnpairedElectrons = 1
    }
    
    SpinConstants = {
        O = {-0.028} # HOMO Wpp
        N = {-0.026} # HOMO Wpp
    }

    OnSiteCorrection= {
        Ouu = {0        0.08672
               0.08672 -0.00523}
        Oud = {0        0.14969
               0.14969  0.03834}
        Nuu = {0.00000  0.06816
               0.06816 -0.00879}
        Nud = {0.00000  0.12770
               0.12770  0.03246}
    }

    SlaterKosterFiles = Type2FileNames {
        Separator = "-"
        Suffix = ".skf"
    }
    
    Filling = Fermi {
        Temperature [K] = 40
    }
    
}

ElectronDynamics = {
    Steps = 10000
    TimeStep [au] = 0.2
    Perturbation = Kick {
        PolarizationDirection = "all"
    }
    FieldStrength [v/a] = 0.001
}

Analysis = {
    MullikenAnalysis = Yes
}

Options {
    WriteAutotestTag = Yes
}

InputVersion = 20.1

Parallel {
    # Allow OMP threads explicitely to test for hybrid parallelisation with
    # MPI-binary. (Check the manual before using this in production runs!)
    UseOmpThreads = Yes
}
